{% extends 'base.html.twig' %}

{% block title offer.title %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <img src="{{ asset('img/square-placeholder.jpg') }}">
                </div>
                <div class="col-md-4">
                    <h1>{{ offer.title }}</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <p>
            {{ offer.description | nl2br }}
        </p>
    </div>

    {% if offer.modalities %}
        <div class="container">

            <h2>Nos modalités d'inscription</h2>

            <div class="row flex">
                {% for modality in  offer.modalities %}
                    <div class="col-4">
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">{{ modality.title }}</h5>
                                <p class="card-text">Soit {{ modality.price }}€ par mois</p>
                                <a href="#" class="btn btn-primary">S'abonner</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    {% else %}
        <h2>Vous n'avez pas encore d'abonnements !</h2>
    {% endif %}
{% endblock %}